@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Detail";
    ViewData["Description"] = "Product Detail";
}

@using MainSite.Classes
@model MainSite.Models.ProductModel

<div id="page-wrapper">
    <div class="col-xs-12">
        <form id="formsproduct" method="post" action="/Dashboard/Product">
            <input id="ContentTypeID" name="ContentTypeID" class="form-control" type="hidden" value="@Model.ContentTypeID">
            <!-- /.row -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="white-box">
                        <div class="">
                            <h2 class="m-b-0 m-t-0">Prefilled VA Form For @Model.ProductName</h2>
                            <small class="text-muted db">Prepared VA form for rating increase</small>
                            <hr>
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6">
                                    <div class="white-box text-center">
                                        <img src="@Model.ImagePath" class="img-responsive" />
                                    </div>
                                    @*<span>Number of Pages:  @Model.NumberOfPages</span>*@
                                </div>

                                <div class="col-lg-9 col-md-9 col-sm-6">

                                    <h4 class="box-title m-t-40">Product description</h4>
                                    <p>
                                        Prepared form for VA's "@Model.ProductRefDescription" based on your service connected injury.
                                        This form contains @Model.NumberOfPages pages. It will need to be signed by a doctor and submitted to the VA for rating increase to take place.
                                    </p>
                                    <h2 class="m-t-40">@Model.Price</h2>
                                    <button type="submit" name="submitButton" value="ADDTOCART" class="btn btn-inverse btn-rounded m-r-5" data-toggle="tooltip" title="Add to cart"><i class="ti-shopping-cart"></i> </button>
                                    <button type="submit" name="submitButton" value="CHECKOUT" class="btn btn-danger btn-rounded" data-toggle="tooltip" title="Go to checkout"> Buy Now </button>

                                    <h3 class="box-title m-t-40">Key Highlights</h3>
                                    <ul class="list-icons">
                                        <li><i class="fa fa-check text-success"></i> Money Back Guarantee.  If you don't get an increase rating from the VA will give your money back. </li>
                                        @*<li><i class="fa fa-check text-success"></i> ... </li>
                                            <li><i class="fa fa-check text-success"></i> ... </li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                        @if (Model.CartItemID > 0)
                        {
                            <div class="alert alert-warning">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <strong> @Model.AlertMessageTitle </strong> @Model.AlertMessageDescription
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--row -->
        </form>
    </div>
</div>
