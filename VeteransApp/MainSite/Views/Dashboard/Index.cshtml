@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
    ViewData["Description"] = "The dashboard page";
}

@model MainSite.Models.DashboardModel

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
            <div class="col-sm-3">
                <div class="white-box">
                    <h3 class="box-title m-b-0">Start a Benefit</h3>
                    <p class="text-muted m-b-20">
                        Easily qualify for other benefits
                    </p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Benefit</th>
                                    <th>Progress</th>
                                    <th class="text-nowrap">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.BenefitStatuses[1].BenefitName</td>
                                    <td>
                                        <div class="progress progress-xs margin-vertical-10 ">
                                            <div class="progress-bar progress-bar-danger" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[1].Progress%" style="width: @Model.BenefitStatuses[1].Progress%"></div>
                                        </div>
                                    </td>
                                    <td class="text-nowrap"><a href="/Dashboard/FormGetBack" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[1].TooltipText"> @Model.BenefitStatuses[1].ActionText </a>  </td>
                                </tr>
                                <tr>
                                    <td>@Model.BenefitStatuses[2].BenefitName</td>
                                    <td>
                                        <div class="progress progress-xs margin-vertical-10 ">
                                            <div class="progress-bar progress-bar-danger" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[2].Progress%" style="width: @Model.BenefitStatuses[2].Progress%"></div>
                                        </div>
                                    </td>
                                    <td class="text-nowrap"><a href="/Dashboard/FormGetShoulder" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[2].TooltipText"> @Model.BenefitStatuses[2].ActionText </a>  </td>
                                </tr>
                                <tr>
                                    <td>@Model.BenefitStatuses[3].BenefitName</td>
                                    <td>
                                        <div class="progress progress-xs margin-vertical-10 ">
                                            <div class="progress-bar progress-bar-danger" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[3].Progress%" style="width: @Model.BenefitStatuses[3].Progress%"></div>
                                        </div>
                                    </td>
                                    <td class="text-nowrap"><a href="/Dashboard/FormGetNeck" data-toggle="tooltip" data-original-title="@Model.BenefitStatuses[3].TooltipText"> @Model.BenefitStatuses[3].ActionText </a>  </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-sm-7">
                @if (Model.evaluationResults != null)
                {
                    <div class="user-btm-box">
                        <div class="col-md-4 col-sm-4 text-center">
                            <p class="text-purple">More $ Month</p>
                            <h1>@string.Format("{0:c0}", Model.evaluationResults.AmountIncreasePerMonth)</h1>
                        </div>
                        <div class="col-md-4 col-sm-4 text-center">
                            <p class="text-blue">More $ Year</p>
                            <h1>@string.Format("{0:c0}", Model.evaluationResults.AmountIncreasePerYear)</h1>
                        </div>
                        <div class="col-md-4 col-sm-4 text-center">
                            <p class="text-danger">Potential Rating</p>
                            <h1>@Model.evaluationResults.PotentialVARating%</h1>
                        </div>
                    </div>
                }
                
                <div class="panel panel-info">
                    <div class="panel-heading"> Start Your Application Today To Earn Your Potential Rating</div>
                    <div class="panel-wrapper collapse in" aria-expanded="true">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table product-overview">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td width="550">
                                                <h2 class="font-500">Start Your Application</h2>
                                            </td>
                                            <td align="center">
                                                <button onclick="window.location='/Dashboard/Preliminary'" class="btn btn-danger pull-right"><i class="fa fa fa-long-arrow-right"></i> Go</button>
                                            </td>
                                        </tr>
                                        @*<tr>
                                            <td width="550">
                                                <h2 class="font-500">Saved DBQs</h2>
                                            </td>
                                            <td align="center">
                                                <button class="btn btn-danger pull-right"><i class="fa fa fa-long-arrow-right"></i> Go</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="550">
                                                <h2 class="font-500">Unfinished DBQs</h2>
                                            </td>
                                            <td align="center">
                                                <button class="btn btn-danger pull-right"><i class="fa fa fa-long-arrow-right"></i> Go</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="550">
                                                <h2 class="font-500">Resource Links</h2>
                                            </td>
                                            <td align="center">
                                                <button class="btn btn-danger pull-right"><i class="fa fa fa-long-arrow-right"></i> Go</button>
                                            </td>
                                        </tr>*@
                                        <tr>
                                            <td width="550">
                                                <h2 class="font-500">For Any Support Call 619-822-2070 </h2>
                                                <p>Please contact us if you have any questions</p>
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-sm-5">
                @if (Model.evaluationResults != null)
                {
                    <div class="white-box">
                        <h3 class="box-title">Free Evaluation Results</h3>
                        <hr>
                        <small>Current VA Rating</small>
                        <h2>@Model.evaluationResults.CurrentRating %</h2>
                        <hr>
                        <small>Potential VA Rating</small>
                        <h2>@Model.evaluationResults.PotentialVARating%</h2>
                        <hr>
                        <small>Your Total Per Month After Increase</small>
                        <h2>@string.Format("{0:c0}", Model.evaluationResults.TotalPerMonthAfterIncrease)</h2>
                        <hr>

                        <button class="btn btn-success">Start Your Application</button>
                    </div>
                    }
                    else
                    {
                        Model.evaluationModel = new MainSite.Models.EvaluationModel();
                    <div class="white-box">
                        <div id="captureformdiv">
                            <form id="captureform" class="form-horizontal" action="/Dashboard/Evaluation">
                                <h2>Instant Free Evaluation</h2>
                                <p>Simply provide the info below to immediately see if you qualify for an increase in VA benefits.</p>
                                <label class="info">(Check all that apply)</label>
                                <br />
                                @Html.EditorFor(x => x.evaluationModel.IsFirstTimeFiling) First time filing
                                <br />
                                @Html.EditorFor(x => x.evaluationModel.HasAClaim) I have a claim with the VA
                                <br />
                                @Html.EditorFor(x => x.evaluationModel.HasActiveAppeal) I have an active appeal
                                <br />
                                @*<label class="control-label">Do you currently have a rating by the VA?</label>
                                    <br />*@
                                <h3 class="box-title">What is your current rating?</h3>
                                @Html.DropDownListFor(x => x.evaluationModel.CurrentRating, (SelectList)ViewBag.CurrentRatingsList)
                                <div class="form-group text-center m-t-20">
                                    <div class="col-xs-12">
                                        <button id="btnSubmit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                }

            </div>

        </div>


    </div>
</div>
<!-- /#page-wrapper -->
