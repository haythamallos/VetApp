@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Preliminary";
    ViewData["Description"] = "Preliminary";
}

@model MainSite.Models.BackModel
<div id="page-wrapper">
    <div class="col-xs-6">
        <div class="white-box">
            <form id="formqback" action="/Dashboard/BackForm">
                <div class="form-group">
                    <div class="col-sm-3">
                        <button name="submitButton" value="Save" class="btn btn-success">Save For Later</button>
                    </div>
                    <div class="col-sm-3">
                        <button name="submitButton" value="Submit" class="btn btn-success">Submit</button>
                    </div>
                    <div class="col-sm-6">
                        <button name="submitButton" value="PDF" class="btn btn-success">PDF</button>
                    </div>
                </div>
                <br />
                @*<div class="form-group m-t-20">
                        <div class="col-xs-4">
                            <input id="NameOfPatient" name="NameOfPatient" class="form-control" type="text" required="" placeholder="Name Of Patient">
                        </div>
                    </div>
                    <div class="form-group m-t-20">
                        <div class="col-xs-4">
                            <input id="SocialSecurity" name="SocialSecurity" class="form-control" type="text" required="" placeholder="Social Security">
                        </div>
                    </div>
                    <br />*@

                <h2>Please answer the questions below regarding your back condition</h2>
                <span>It's best to answer these questions if you have access to your <a href="https://www.ebenefits.va.gov/" target="_blank">eBenefits</a></span>
                <div class="form-check form-check-inline panel panel-primary">
                    <div class="panel-heading">What is the diagnosis of your back? (Check all that apply)</div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S47) No current diagnosis
                            @*<input class="form-check-input" type="checkbox" name="checkboxNoDiagnosis" id="checkboxNoDiagnosis" value="@Model.checkboxNoDiagnosis"> No current diagnosis*@
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S48) Mechanical back pain syndrome
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S49) Lumbosacral sprain/strain
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S50) Facet joint arthropathy (degenerative joint disease of lumbosacral spine)
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S51) Degenerative disc disease
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S1) Degenerative scoliosis
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S52) Foraminal/lateral recess/central stenosis
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S53) Degenerative spondylolisthesis
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S54) Spondylolysis/isthmic spondylolisthesis
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S55) Intervertebral disc syndrome
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S13) Radiculopathy
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S12) Ankylosis of thoracolumbar spine
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S7) Ankylosing spondylitis of the thoracolumbar spine (back)
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S6) Vertebral fracture (vertebrae of the back)
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-normal">
                            @Html.EditorFor(x => x.S62) Other diagnosis
                        </label>
                    </div>
                </div>


                <label class="font-bold">
                    Refer to the image on the right in answering questions about your body movement abilities.
                </label>
                <div class="form-check form-check-inline panel panel-primary">
                    <div class="panel-heading">Joint Movement</div>
                    <span>Forward Flexion (normal endpoint = 90 degrees)Image part (d)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S96, (SelectList)ViewBag.MovementList90Deg)

                    <br />
                    <span>Extension (normal endpoint = 30 degrees)Image part (d)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S86, (SelectList)ViewBag.MovementList30Deg)

                    <br />
                    <span>Right Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S90, (SelectList)ViewBag.MovementList30Deg)

                    <br />
                    <span>Left Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S87, (SelectList)ViewBag.MovementList30Deg)

                    <br />
                    <span>Right Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S82, (SelectList)ViewBag.MovementList30Deg)

                    <br />
                    <span>Left Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S78, (SelectList)ViewBag.MovementList30Deg)

                </div>

                <label class="font-bold">
                    Please perform the tests repetitively ...
                </label>

                <div class="form-check form-check-inline panel panel-primary">
                    <div class="panel-heading">Joint Movement</div>
                    <span>Forward Flexion (normal endpoint = 90 degrees)Image part (d)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S112, (SelectList)ViewBag.MovementList90Deg)
                    <br />
                    <span>Extension (normal endpoint = 30 degrees)Image part (d)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S111, (SelectList)ViewBag.MovementList30Deg)
                    <br />
                    <span>Right Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S113, (SelectList)ViewBag.MovementList30Deg)
                    <br />
                    <span>Left Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S114, (SelectList)ViewBag.MovementList30Deg)
                    <br />
                    <span>Right Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S120, (SelectList)ViewBag.MovementList30Deg)
                    <br />
                    <span>Left Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                    <br />
                    @Html.DropDownListFor(model => model.S121, (SelectList)ViewBag.MovementList30Deg)

                </div>

                <label class="font-bold">
                    Do you have tenderness?
                </label>
                @Html.EditorFor(x => x.S135Tenderness) Yes

                <br />
                <label class="font-bold">
                    Do you have muscle spasms?
                </label>
                @Html.EditorFor(x => x.S145MuscleSpasm) Yes
                <br />
                <label class="font-bold">
                    If you have muscle spasms, does this affect your walking motion?
                </label>
                @Html.EditorFor(x => x.S145MuscleSpasmQuestion) Yes

                <br />
                <label class="font-bold">
                    Do you have guarding?
                </label>
                @Html.EditorFor(x => x.S145Guarding) Yes
                <br />
                <label class="font-bold">
                    If you have guarding, does this affect your walking motion?
                </label>
                @Html.EditorFor(x => x.S145GuardingQuestion) Yes


                <div class="form-check form-check-inline panel panel-primary">
                    <div class="panel-heading">Contributing Factors of Disability</div>
                    <span></span>
                    <br />
                    @Html.EditorFor(x => x.S159)Less movement than normal (due to ankylosis, limitation or blocking, adhesions, tendon-tie-ups, contracted scars, etc.)
                    <br />
                    @Html.EditorFor(x => x.S164)More movement than normal (from flail joints, resections, nonunion of fractures, relaxation of ligaments, etc.)
                    <br />
                    @Html.EditorFor(x => x.S158)Weakened movement (due to muscle injury, disease or injury of peripheral nerves, divided or lengthened tendons, etc.)
                    <br />
                    @Html.EditorFor(x => x.S157)Excess fatigability
                    <br />
                    @Html.EditorFor(x => x.S171)Incoordination, impaired ability to execute skilled movements smoothly 
                    <br />
                    @Html.EditorFor(x => x.S170)Pain on movement
                    <br />
                    @Html.EditorFor(x => x.S169)Swelling
                    <br />
                    @Html.EditorFor(x => x.S168)Deformity 
                    <br />
                    @Html.EditorFor(x => x.S167)Atrophy of disuse
                    <br />
                    @Html.EditorFor(x => x.S160)Instability of station 
                    <br />
                    @Html.EditorFor(x => x.S163)Disturbance of locomotion 
                    <br />
                    @Html.EditorFor(x => x.S161)Interference with sitting 
                    <br />
                    @Html.EditorFor(x => x.S162)Interference with standing 
                    <br />


                    @*Turn off this section if all the same*@
                   
                    <label class="font-bold">
                        Contributing factors of disability
                    </label>

                    <div class="form-check form-check-inline panel panel-primary">
                        <div class="panel-heading">Joint Movement</div>
                        <span>Forward Flexion (normal endpoint = 90 degrees)Image part (d)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S184, (SelectList)ViewBag.MovementList90Deg)
                        <br />
                        <span>Extension (normal endpoint = 30 degrees)Image part (d)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S185, (SelectList)ViewBag.MovementList30Deg)
                        <br />
                        <span>Right Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S174, (SelectList)ViewBag.MovementList30Deg)
                        <br />
                        <span>Left Lateral Flexion (normal endpoint = 30 degrees)Image part (f)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S180, (SelectList)ViewBag.MovementList30Deg)
                        <br />
                        <span>Right Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S175, (SelectList)ViewBag.MovementList30Deg)
                        <br />
                        <span>Left Lateral Rotation (normal endpoint = 30 degrees)Image part (f)</span>
                        <br />
                        @Html.DropDownListFor(model => model.S177, (SelectList)ViewBag.MovementList30Deg)

                    </div>

                    <label class="font-bold">
                        Do you have Radiculopathy?
                    </label>
                    @Html.EditorFor(x => x.S316) Yes
                    <br />
                    <label class="font-bold">
                        If you have Radiculopathy, is it left, right or both legs?
                    </label>
                    @Html.RadioButtonFor(x => x.SRadiculopathyLegSide, "Left") Left
                    @Html.RadioButtonFor(x => x.SRadiculopathyLegSide, "Right") Right
                    @Html.RadioButtonFor(x => x.SRadiculopathyLegSide, "Both") Both
                    <hr />
                    <label class="font-bold">
                        Do you have CONSTANT pain?
                    </label>
                    @Html.EditorFor(x => x.SRadiculopathyConstantPainLevelAnswer) Yes
                    <br />
                    <label class="font-bold">
                        If you have CONSTANT pain, is it:
                    </label>
                    @Html.RadioButtonFor(x => x.SRadiculopathyConstantPainLevel, "MILD") mild
                    @Html.RadioButtonFor(x => x.SRadiculopathyConstantPainLevel, "MODERATE") moderate
                    @Html.RadioButtonFor(x => x.SRadiculopathyConstantPainLevel, "SEVERE") severe
                    <hr />

                    <label class="font-bold">
                        Do you have INTERMITTENT pain?
                    </label>
                    @Html.EditorFor(x => x.SRadiculopathyIntermittentPainLevelAnswer) Yes
                    <br />
                   <label class="font-bold">
                        If you have INTERMITTENT pain, is it:
                    </label>
                    @Html.RadioButtonFor(x => x.SRadiculopathyIntermittentPainLevel, "MILD") mild
                    @Html.RadioButtonFor(x => x.SRadiculopathyIntermittentPainLevel, "MODERATE") moderate
                    @Html.RadioButtonFor(x => x.SRadiculopathyIntermittentPainLevel, "SEVERE") severe

                    <hr />
                    <label class="font-bold">
                        Do you have DULL pain?
                    </label>
                    @Html.EditorFor(x => x.SRadiculopathyDullPainLevelAnswer) Yes
                    <br />
                    <label class="font-bold">
                        If you have DULL pain, is it:
                    </label>
                    @Html.RadioButtonFor(x => x.SRadiculopathyDullPainLevel, "MILD") mild
                    @Html.RadioButtonFor(x => x.SRadiculopathyDullPainLevel, "MODERATE") moderate
                    @Html.RadioButtonFor(x => x.SRadiculopathyDullPainLevel, "SEVERE") severe
                    <hr />
                   <label class="font-bold">
                        Do you have Tingling or loss of sensation pain?
                    </label>
                    @Html.EditorFor(x => x.SRadiculopathyTinglingPainLevelAnswer) Yes
                    <br />
                    <label class="font-bold">
                        If you have Tingling or loss of sensation pain, is it:
                    </label>
                    <br />
                    @Html.RadioButtonFor(x => x.SRadiculopathyTinglingPainLevel, "MILD") mild
                    @Html.RadioButtonFor(x => x.SRadiculopathyTinglingPainLevel, "MODERATE") moderate
                    @Html.RadioButtonFor(x => x.SRadiculopathyTinglingPainLevel, "SEVERE") severe
                    <hr />

                    <label class="font-bold">
                        Do you have NUMBNESS pain?
                    </label>
                    @Html.EditorFor(x => x.SRadiculopathyNumbnessPainLevelAnswer) Yes
                    <br />
                   <label class="font-bold">
                        If you have NUMBNESS pain, is it:
                    </label>
                    @Html.RadioButtonFor(x => x.SRadiculopathyNumbnessPainLevel, "MILD") mild
                    @Html.RadioButtonFor(x => x.SRadiculopathyNumbnessPainLevel, "MODERATE") moderate
                    @Html.RadioButtonFor(x => x.SRadiculopathyNumbnessPainLevel, "SEVERE") severe


                </div>


