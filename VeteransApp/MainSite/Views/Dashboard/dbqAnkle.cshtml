                            <div class="form-group m-t-20">
                                <label class="col-md-3">Full Name</label>
                                <div class="col-xs-4">
                                    <input id="NameOfPatient" name="NameOfPatient" class="form-control" type="text" required="" placeholder="Full Name" value="@Model.NameOfPatient">
                                </div>
                            </div>
                            <br />
                            <div class="form-group m-t-20">
                                <label class="col-md-3">Social Security Number</label>
                                <div class="col-xs-4">
                                    <input id="SocialSecurity" name="SocialSecurity" class="form-control" type="text" required="" placeholder="Social Security" value="@Model.SocialSecurity">
                                </div>
                            </div>
                            <br />
                            <hr />
                            <div>
                                <label class="font-bold">What is the diagnosis of your service-connected ankle condition?</label>
                                @Html.RadioButtonFor(x => x.Side, "LEFT") Left
                                @Html.RadioButtonFor(x => x.Side, "RIGHT") Right
                                @Html.RadioButtonFor(x => x.Side, "BOTH") Both
                            </div>
                            <hr />
                            <div class="form-group m-t-20">
                                <label class="font-bold">What is the diagnosis of your service-connected shoulder condition? Check if applies and choose Right, Left or Both?</label>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label font-normal">
                                        @Html.EditorFor(x => x.S82) Lateral collateral ligament sprain (chronic/recurrent)
                                    </label>
                                    @Html.RadioButtonFor(x => x.S82Side, "RIGHT") Right
                                    @Html.RadioButtonFor(x => x.S82Side, "LEFT") Left
                                    @Html.RadioButtonFor(x => x.S82Side, "BOTH") Both
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label font-normal">
                                        @Html.EditorFor(x => x.S83) Deltoid ligament sprain (chronic/recurrent)
                                    </label>
                                    @Html.RadioButtonFor(x => x.S83Side, "RIGHT") Right
                                    @Html.RadioButtonFor(x => x.S83Side, "LEFT") Left
                                    @Html.RadioButtonFor(x => x.S83Side, "BOTH") Both
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label font-normal">
                                        @Html.EditorFor(x => x.S84) Osteochondritis dissecans to include osteochondral fracture
                                    </label>
                                    @Html.RadioButtonFor(x => x.S84Side, "RIGHT") Right
                                    @Html.RadioButtonFor(x => x.S84Side, "LEFT") Left
                                    @Html.RadioButtonFor(x => x.S84Side, "BOTH") Both
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label font-normal">
                                        @Html.EditorFor(x => x.S85) Impingement
                                    </label>
                                    @Html.RadioButtonFor(x => x.S85Side, "RIGHT") Right
                                    @Html.RadioButtonFor(x => x.S85Side, "LEFT") Left
                                    @Html.RadioButtonFor(x => x.S85Side, "BOTH") Both
                                </div>
