                                <label>For the <spa>LEFT</spa> ankle at its worst or during a flare-up, what is the range for each motion?</label>
                                <br />
                                <span>Plantar Flexion (normal endpoint = 45 degrees)</span>
                                @Html.DropDownListFor(x => x.S237, (SelectList)ViewBag.MovementList45Deg)

                                <br />
                                <span>Dorsiflexion (normal endpoint = 20 degrees)</span>
                                @Html.DropDownListFor(x => x.S234, (SelectList)ViewBag.MovementList20Deg)

                            </div>
                            <button class="btn btn-warning btn-md pull-left" type="button" id="part2PrevBtn">Prev</button>
                            <button class="btn btn-success btn-md pull-right" type="button" id="part2NextBtn">Next</button>
                        </div>
                    </div>
                </div>
