
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MainSite.Models.UserModel
    <div id="page-wrapper">
        <div class="col-xs-6">
            <div class="white-box">
                <form id="formqback" action="/Dashboard/ProfileUpdate">
                    <div class="form-group">
                        <label class="col-md-12">Full Name</label>
                        <div class="col-md-12">
                            <input id="Fullname" name="Fullname" value="@Model.FullName" type="text" placeholder="Johnathan Doe" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            <input id="Username" name="Username" value="@Model.Username" type="email" placeholder="johnathan@admin.com" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Password</label>
                        <div class="col-md-12">
                            <input id="Password" name="Password" value="@Model.Password" type="password" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Phone No</label>
                        <div class="col-md-12">
                            <input id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" type="text" placeholder="123 456 7890" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Message</label>
                        <div class="col-md-12">
                            <textarea id="Message" name="Message" value="@Model.Message"  rows="5" class="form-control form-control-line"></textarea>
                        </div>
                    </div>
 
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Update Profile</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

