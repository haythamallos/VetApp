
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MainSite.Models.UserModel
    <div id="page-wrapper">
        <div class="col-xs-12">
            <div class="white-box">
                <form id="formqback" class="form-horizontal" action="/Dashboard/ProfileUpdateAction">
                    <div class="form-group">
                        <label class="col-md-3">Full Name</label>
                        <div class="col-md-9">
                            <input id="Fullname" name="Fullname" value="@Model.FullName" type="text" placeholder="Johnathan Doe" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-3">Email</label>
                        <div class="col-md-9">
                            <input id="Username" name="Username" value="@Model.Username" type="email" placeholder="johnathan@admin.com" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Password</label>
                        <div class="col-md-9">
                            <input id="Password" name="Password" value="@Model.Password" type="password" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Social Security Number</label>
                        <div class="col-md-9">
                            <input id="SSN" name="SSN" value="@Model.SSN" type="text" placeholder="123 45 6789" class="form-control form-control-line">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3">Phone No</label>
                        <div class="col-md-9">
                            <input id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" type="text" placeholder="123 456 7890" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Current VA Rating</label>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.CurrentRating, (SelectList)ViewBag.CurrentRatingsList)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Anything you want us to know that would help evaluate you for VA increase?  Tell us your story.</label>
                        <div class="col-md-12">
                            <textarea id="Message" name="Message" value="@Model.Message"  rows="5" class="form-control form-control-line"></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Update Profile</button>
                        </div>
                    </div>
                    @if (ViewData["IsSaved"] != null)
                    {
                        <div class="card">
                            <div class="card-block">
                                <h4 class="card-title">Successfully Updated</h4>
                                <p class="card-text">Your profile was successfully updated</p>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

