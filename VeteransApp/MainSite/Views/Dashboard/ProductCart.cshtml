@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Cart";
    ViewData["Description"] = "Product Cart";
}
@using MainSite.Models
@model MainSite.Models.ProductCartModel

<div id="page-wrapper">
    <div class="col-xs-12">
        <!-- /.row -->
        <div class="row">
            <form id="formsproductcart" method="post" action="/Dashboard/ProductCart">

                <div class="col-md-9 col-lg-9 col-sm-7">
                    <div class="panel panel-info">
                        <div class="panel-heading"> Your Cart (@Model.lstProductModel.Count)</div>
                        <div class="panel-wrapper collapse in" aria-expanded="true">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table product-overview">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Product info</th>
                                                <th>Price</th>
                                                <th style="text-align:center">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (ProductModel productModel in Model.lstProductModel)
                                            {
                                                <tr>
                                                    <td width="150"><img src="@productModel.ImagePath" alt="iMac" width="80"></td>
                                                    <td width="550"><h5 class="font-500">@productModel.ProductName VA Filled Form</h5> <p>Prepared form for VA's "@productModel.ProductRefDescription" based on your service connected injury.</p></td>
                                                    <td>@productModel.Price</td>
                                                    <td align="center"><button type="submit" name="id" value="@productModel.CartItemID" class="btn btn-inverse btn-rounded m-r-5" data-toggle="tooltip" data-original-title="Delete"><i class="ti-trash text-dark"></i> </button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <hr>
                                    @if (Model.lstProductModel.Count > 0)
                                    {
                                        @*<button type="submit" name="id" value="CHECKOUT" class="btn btn-danger pull-right"><i class="fa fa fa-shopping-cart"></i> Checkout</button>*@
                                    }
                                    @*<button type="submit" name="id" value="CONTINUE" class="btn btn-default btn-outline"><i class="fa fa-arrow-left"></i> Continue shopping</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @if (Model.lstProductModel.Count > 0)
            {
                <form id="formsproductcharge" method="post" action="/Dashboard/Charge">
                    <div class="col-md-3 col-lg-3 col-sm-5">
                        <div class="white-box">
                            <h3 class="box-title">Cart Summary</h3>
                            <hr>
                            <small>Total Price</small>
                            <h2>@Model.TotalPriceText</h2>
                            <hr>
                            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                    data-key="pk_test_hOEF08WWCDdmqfRSgDstIXAr"
                                    data-amount="@Model.TotalPriceText"
                                    data-name="Veteranapp"
                                    data-description="VA Service Connected Form(s)"
                                    data-image=""
                                    data-locale="auto"
                                    data-zip-code="true">
                            </script>
                            @*<button class="btn btn-success">Checkout</button> <button class="btn btn-default btn-outline">Cancel</button>*@
                        </div>
                    </div>
                </form>
            }
            <div class="col-md-3 col-lg-3 col-sm-5">
                <div class="white-box">
                    <h3 class="box-title">For Any Support</h3>
                    <hr>
                    <h4><i class="ti-mobile"></i> 619-822-2070 (Toll Free)</h4>
                    <small>Please contact with us if you have any questions.</small>
                </div>
            </div>
        </div>

        <!--row -->



    </div>
</div>

