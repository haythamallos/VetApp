@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Veteranpp";
    ViewData["Description"] = "Veteranapp";
}

<section id="wrapper" class="login-register">
    <div class="container-fluid">
        <div class="top-right">
            <a class="logo" href="/Home"><b><img src="~/Images/banner-308x100.png" alt="home" /></b></a>
            @*<div class="col-sm-3">
                <a class="popup-youtube btn btn-danger" href="www.youtube.com/watch?v=sK7riqg2mr4">Get Started video</a>>
            </div>*@
        </div>
        <div class="login-box login-sidebar">
            <div class="white-box">

                @*<form id="captureform" asp-controller="Account" asp-action="Evaluation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal form-material">*@
                <div id="captureformdiv">
                    <form id="captureform" class="form-horizontal">
                        <h2>Instant Free Evaluation</h2>
                        <p>Simply provide the info below to immediately see if you qualify for an increase in VA benefits</p>
                        <input asp-for="Evaluation.Rating" type="hidden" id="slidervalue" />
                        <label class="control-label">Is this your first time filing?</label>
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input id="isfirsttimefilingtrue" name="isfirsttimefiling" type="radio" value="true"> Yes
                            </label>

                            <label class="radio-inline">
                                <input id="isfirsttimefilingfalse" name="isfirsttimefiling" type="radio" value="false" checked=""> No
                            </label>
                        </div>

                        <label class="control-label">Do you have a claim with the VA?</label>
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input id="hasclaimwithvatrue" name="hasclaimwithva" type="radio" value="true"> Yes
                            </label>
                            <label class="radio-inline">
                                <input id="hasclaimwithvatrue" name="hasclaimwithva" type="radio" value="false" checked=""> No
                            </label>
                        </div>


                        <label class="control-label">Do you have an active appeal?</label>
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input id="hasactiveappealtrue" name="hasactiveappeal" type="radio" value="true"> Yes
                            </label>
                            <label class="radio-inline">
                                <input id="hasactiveappealfals" name="hasactiveappeal" type="radio" value="false" checked=""> No
                            </label>
                        </div>

                        <label class="control-label">Do you currently have a rating by the VA?</label>
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input id="hasratingtrue" name="hasrating" type="radio" value="true" onclick="$('#ratingsliderdiv').removeClass('hidden'); $('#ratingsliderdiv').show();"> Yes
                            </label>
                            <label class="radio-inline">
                                <input id="hasratingfalse" name="hasrating" type="radio" value="false" checked="" onclick="$('#ratingsliderdiv').hide();"> No
                            </label>
                        </div>

                        <div id="ratingsliderdiv" class="hidden">
                            <h3 class="box-title">What is your current rating?</h3>
                            <select id="evalratingselect" data-backer="--Select current rating--" class="form-control">
                                <option value="0">--Select rating--</option>
                                <option value="0">0</option>
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="50">50</option>
                                <option value="60">60</option>
                                <option value="70">70</option>
                                <option value="80">80</option>
                                <option value="90">90</option>
                                <option value="100">100</option>
                            </select>

                            @*<div id="range_rating"></div>*@
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <a href="/Home/Register2" id="captureform" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"><b>Submit</b></a>
                            </div>
                        </div>
                        <div class="form-group m-b-0">
                            <div class="col-sm-12 text-center">
                                @*<p>Already have an account? <a href="#" onclick="showform('loginformdiv');" class="text-primary m-l-5"><b>Sign In</b></a></p>
                                    <p>Don't have an account? <a href="#" onclick="showform('registerformdiv');" class="text-primary m-l-5" value="signup"><b>Sign Up</b></a></p>*@
                                <a href="javascript:void(0)" id="btnIndexTestimonialsModal">Testimonials</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
