@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Veteranpp";
    ViewData["Description"] = "Veteranapp";
}

@model MainSite.Models.EvaluationModel

<section id="wrapper" class="login-register">
    <div class="container-fluid">
        <div class="top-right">
            <a class="logo" href="/Home"><b><img src="~/Images/banner-308x100.png" alt="home" /></b></a>
            @*<div class="col-sm-3">
                <a class="popup-youtube btn btn-danger" href="www.youtube.com/watch?v=sK7riqg2mr4">Get Started video</a>>
            </div>*@
        </div>
        <div class="login-box login-sidebar">
            <div class="white-box">

                <div id="captureformdiv">
                    <form id="captureform" class="form-horizontal" action="/Dashboard/Evaluation">
                        <h2>Instant Free Evaluation</h2>
                        <p>Simply provide the info below to immediately see if you qualify for an increase in VA benefits. (Check all that apply)</p>
                        <label class="info">(Check all that apply)</label>
                        <br />
                        @Html.EditorFor(x => x.IsFirstTimeFiling) First time filing
                        <br />
                        @Html.EditorFor(x => x.HaveAClaim) I have a claim with the VA
                        <br />
                        @Html.EditorFor(x => x.HaveActiveAppeal) I have an active appeal
                        <br />
                        <label class="control-label">Do you currently have a rating by the VA?</label>
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input id="hasratingtrue" name="hasrating" type="radio" value="true" onclick="$('#ratingsliderdiv').removeClass('hidden'); $('#ratingsliderdiv').show();"> Yes
                            </label>
                            <label class="radio-inline">
                                <input id="hasratingfalse" name="hasrating" type="radio" value="false" checked="" onclick="$('#ratingsliderdiv').hide();"> No
                            </label>
                        </div>
                        <div id="ratingsliderdiv" class="hidden">
                            <h3 class="box-title">What is your current rating?</h3>
                            @Html.DropDownListFor(model => model.CurrentRating, (SelectList)ViewBag.CurrentRatingsList)
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button id="btnSubmit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
