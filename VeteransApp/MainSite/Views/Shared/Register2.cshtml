@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Veteranpp Register";
    ViewData["Description"] = "Veteranapp Register";
}

@model MainSite.Models.UserModel

<section id="wrapper" class="login-register">
    <div class="top-left">
        <a class="logo" href="/Home"><b><img src="~/Images/banner-462x150.png" alt="home" /></b></a>
    </div>

    <div class="login-box login-sidebar">

        <div class="white-box">
            <form class="form-horizontal form-material" id="loginform" method="post" action="/Dashboard/Register">
                @*<a href="javascript:void(0)" class="text-center db"><img src="~/Images/banner-308x100.png" alt="Home" /></a>*@
                <h3 class="box-title m-t-40 m-b-0">Register To Receive Your Free Evaluation</h3><small>Create a free account to get started</small>
                @*<div class="form-group m-t-20">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Name">
                        </div>
                    </div>*@
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input id="Username" name="Username" class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input id="Password" name="Password" class="form-control" type="password" required="" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" required="" placeholder="Confirm Password">
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-md-12">
                        <div class="checkbox checkbox-primary p-t-0">
                            <input id="checkbox-signup" type="checkbox">
                            <label for="checkbox-signup"> I agree to all <a href="#">Terms</a></label>
                        </div>
                    </div>
                </div>*@
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button id="btnLogin" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Get Started</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Already have an account? <a href="/Home/Login2" class="text-primary m-l-5"><b>Sign In</b></a></p>
                    </div>
                </div>


                @if (ViewData["UserExist"] != null)
                {
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Your Attempt to Login</h4>
                            <p class="card-text">It seems the user already exists.  Do you already have an account with us?</p>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                        </div>
                    </div>
                }
                else if (ViewData["HasError"] != null)
                {
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Encountered an Error</h4>
                            <p class="card-text">We are temporarily unable to process your request.</p>
                        </div>
                    </div>
                }
                else if (ViewData["InvalidCredentials"] != null)
                {
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Invalid Username or Password</h4>
                            <p class="card-text">Please avoid using non-standard characters for username or password</p>
                        </div>
                    </div>
                }
                else if (ViewData["PasswordMatch"] != null)
                {
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">Password Mismatch</h4>
                            <p class="card-text">Passwords do match. Please confirm your password.</p>
                        </div>
                    </div>
                }

            </form>
        </div>
    </div>
</section>
