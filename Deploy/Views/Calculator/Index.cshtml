@model MainSite.ViewModels.CalculatorViewModel
@{
    ViewBag.Title = "Caculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/content/calculator.css">
}

<h2>VA Disability Ratings Calculator</h2>
<div class="row">
    @using (Html.BeginForm("ProcessForm", "Calculator", FormMethod.Post))
    {
        <div class="col-lg-7">
            <div id="calculator">
                <label>Rating</label>
                <div class="keys">
                    <div class="inline-keys">
                        <input type="submit" name="submit" value="70" />
                        <input type="submit" name="submit" value="80" />
                        <input type="submit" name="submit" value="90" />
                    </div>
                    <div class="inline-keys">
                        <input type="submit" name="submit" value="40" />
                        <input type="submit" name="submit" value="50" />
                        <input type="submit" name="submit" value="60" />
                    </div>
                    <div class="inline-keys">
                        <input type="submit" name="submit" value="10" />
                        <input type="submit" name="submit" value="20" />
                        <input type="submit" name="submit" value="30" />
                        <input type="submit" name="submit" value="Clr" style="background-color:#ffb2b2" />
                        @*<span class="clear">C</span>*@
                    </div>
                    <div class="keys">
                        <label>Bilateral Facts</label>
                        <div class="inline-keys">
                            <input type="submit" name="submit" value="Bilateral Upper" style="width:auto" />
                            <input type="submit" name="submit" value="Right Upper" style="width:auto" />
                            <input type="submit" name="submit" value="Left Upper" style="width:auto" />
                        </div>
                        <div class="inline-keys">
                            <input type="submit" name="submit" value="Bilateral Lower" style="width:auto" />
                            <input type="submit" name="submit" value="Right Lower" style="width:auto" />
                            <input type="submit" name="submit" value="Left Lower" style="width:auto" />
                        </div>
                        @*<label>Item</label>*@
                        <div class="inline-keys">
                            <div id="screen">
                                <label style="color: white">@Model.workingItem.ToString()</label>
                            </div>
                            @*<input type="submit" name="submit" value="+" style="background-color:#ffffd9" />*@
                            @*<span class="operator">+</span>*@
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-lg-5">
            <div id="calculator">
                
                <div class="keys">
                    <div class="inline-keys">
                        <label>Combined Rating</label>
                        <div id="screen">
                            <label style="color: white">@Model.combinedRating</label>
                        </div>

                        <h6>All ratings listed in descending order</h6>
                    </div>
                </div>
                @{
                    int ind = 0;
                    foreach (var item in Model.lstCalculatorItem)
                    {
                        if (!item.isBilateralWorkingItem)
                        {
                            <div class="inline-keys">
                                <div id="screen">
                                    <label style="color: white">@item.ToString()</label>
                                </div>
                                @*<input type="submit" name="submit" value="-" style="background-color:#ffffd9" />*@
                                @Html.ActionLink("Remove", "RemoveItem", "Calculator", new { id = ind }, null)
                            </div>
                        }
                        ind++;
                    }
                    if (Model.hasBilateral)
                    {
                        <h6>Rounded Bilateral (Combined+10%):  @Model.bilateralWorkingItem.RatingID%</h6>
                    }
                }
              
                @*<div class="inline-keys">
                            <div id="screen"></div>
                            <span class="operator">-</span>
                        </div>
                        <div class="inline-keys">
                            <div id="screen"></div>
                            <span class="operator">-</span>
                        </div>
                        <div class="inline-keys">
                            <div id="screen"></div>
                            <span class="operator">-</span>
                        </div>
                    </div>*@
            </div>

        </div>
                    }

</div>


<script src="Scripts/calculator.js"></script>

