<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Valued Veteran Consulting Services</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Description"]" />

    <title>Valued Veteran Consulting Services</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- animation CSS -->
    <link href="~/css/animate.css" rel="stylesheet">
    <!-- color CSS -->
    <link href="~/css/colors/blue.css" id="theme" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/style.css" rel="stylesheet">

    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
</head>
<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> 619-822-2070</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> info@vvcservices.com</a></li>
                                <li><a href="/Home"><i class="fa fa-home"></i> Home</a></li>
                                <li><a href="/Home"><i class="fa fa-info-circle"></i> Free Evaluation</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->
        </header>


        @RenderBody()

        <!-- jQuery -->
        <script src="~/plugins/bower_components/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- Menu Plugin JavaScript -->
        <script src="~/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>

        <!--slimscroll JavaScript -->
        <script src="~/js/jquery.slimscroll.js"></script>
        <!--Wave Effects -->
        <script src="~/js/waves.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="~/js/custom.min.js"></script>
        <!--Style Switcher -->
        <script src="~/plugins/bower_components/styleswitcher/jQuery.style.switcher.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="~/js/site.js"></script>

        @RenderSection("scripts", required: false)
</body>
</html>





