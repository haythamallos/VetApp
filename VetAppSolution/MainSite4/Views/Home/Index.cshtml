<section id="wrapper" class="login-register">
    <div class="top-left">
        <a class="logo" href="/Home"><b><img src="~/plugins/images2/banner-308x100.png" alt="home" /></b></a>
        <div class="col-sm-3">
            <a class="popup-youtube btn btn-danger" href="www.youtube.com/watch?v=sK7riqg2mr4">Get Started video</a>>
        </div>
    </div>
    <div class="login-box login-sidebar">
        <div class="white-box">

            @*<form id="captureform" asp-controller="Account" asp-action="Evaluation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal form-material">*@
            <div id="captureformdiv" style="display: none">
                <form id="captureform" class="form-horizontal form-material">
                    <h2>Instant Free Evaluation</h2>
                    <p>Simply provide the info below to immediately see if you qualify for an increase in VA benefits</p>
                    <input asp-for="Evaluation.Rating" type="hidden" id="slidervalue" />
                    <label class="control-label">Is this your first time filing?</label>
                    <div class="radio-list">
                        <label class="radio-inline">
                            <input id="isfirsttimefilingtrue" name="isfirsttimefiling" type="radio" value="true"> Yes
                        </label>

                        <label class="radio-inline">
                            <input id="isfirsttimefilingfalse" name="isfirsttimefiling" type="radio" value="false" checked=""> No
                        </label>
                    </div>

                    <label class="control-label">Do you have a claim with the VA?</label>
                    <div class="radio-list">
                        <label class="radio-inline">
                            <input id="hasclaimwithvatrue" name="hasclaimwithva" type="radio" value="true"> Yes
                        </label>
                        <label class="radio-inline">
                            <input id="hasclaimwithvatrue" name="hasclaimwithva" type="radio" value="false" checked=""> No
                        </label>
                    </div>


                    <label class="control-label">Do you have an active appeal?</label>
                    <div class="radio-list">
                        <label class="radio-inline">
                            <input id="hasactiveappealtrue" name="hasactiveappeal" type="radio" value="true"> Yes
                        </label>
                        <label class="radio-inline">
                            <input id="hasactiveappealfals" name="hasactiveappeal" type="radio" value="false" checked=""> No
                        </label>
                    </div>

                    <label class="control-label">Do you currently have a rating by the VA?</label>
                    <div class="radio-list">
                        <label class="radio-inline">
                            <input id="hasratingtrue" name="hasrating" type="radio" value="true" onclick="$('#ratingsliderdiv').removeClass('hidden'); $('#ratingsliderdiv').show();"> Yes
                        </label>
                        <label class="radio-inline">
                            <input id="hasratingfalse" name="hasrating" type="radio" value="false" checked="" onclick="$('#ratingsliderdiv').hide();"> No
                        </label>
                    </div>

                    <div id="ratingsliderdiv" class="hidden">
                        <h3 class="box-title">What is your current rating?</h3>
                        <div id="range_rating"></div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <a href="javascript:void(0)" id="captureform-to-resultsform" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"><b>Submit</b></a>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Already have an account? <a href="#" onclick="showform('loginformdiv');" class="text-primary m-l-5"><b>Sign In</b></a></p>
                            <p>Don't have an account? <a href="#" onclick="showform('registerformdiv');" class="text-primary m-l-5" value="signup"><b>Sign Up</b></a></p>
                            @*<p>Already have an account? <a href="#"  class="text-primary m-l-5"><b>Sign In</b></a></p>
                                <p>Don't have an account? <a href="javascript:void(0)" id="showform" class="text-primary m-l-5" value="signup"><b>Sign Up</b></a></p>*@
                            <a href="javascript:void(0)" id="btnTestSmallModal" class="text-primary m-l-5"><b>Show Modal</b></a>
                        </div>
                    </div>
                </form>
            </div>

            <div id="resultsformdiv" style="display: none">
                <form id="resultsform" class="form-horizontal form-material">
                    <h3 class="box-title">Evaluation Results</h3>
                    <div id="results1div" class="">
                        <div class="text-right">
                            <span class="text-muted">Get This Much More Per Month</span>
                            <h1><sup><i class="ti-arrow-up text-success"></i></sup> $500</h1>
                        </div>
                        <span class="text-success">30% Rating Increase</span>
                        <div class="progress m-b-0">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width:30%;"> <span class="sr-only">30% Complete</span> </div>
                        </div>
                        <div>
                            <div class="well">
                                <h4>Money Back Guarantee</h4>
                                <p>Our analysis shows we may be able to increase your benefits rating by additional 30%.  If we can't deliver on our promise then you get your money back.  It's that simple.</p>
                            </div>
                        </div>
                    </div>
                    <div id="results2div" class="">
                        <div class="text-right">
                            <span class="text-muted">Get This Much More Per Month</span>
                            <h1><sup><i class="ti-arrow-up text-success"></i></sup> $300</h1>
                        </div>
                        <span class="text-success">20% Rating Increase</span>
                        <div class="progress m-b-0">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:20%;"> <span class="sr-only">20% Complete</span> </div>
                        </div>
                        <div>
                            <div class="well">
                                <h4>Money Back Guarantee</h4>
                                <p>Our analysis shows we may be able to increase your benefits rating by additional 20%.  If we can't deliver on our promise then you get your money back.  It's that simple.</p>
                            </div>
                        </div>
                    </div>
                    <div id="results3div" class="">
                        <div class="text-right">
                            <span class="text-muted">Get This Much More Per Month</span>
                            <h1><sup><i class="ti-arrow-up text-success"></i></sup> $100</h1>
                        </div>
                        <span class="text-success">10% Rating Increase</span>
                        <div class="progress m-b-0">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width:10%;"> <span class="sr-only">10% Complete</span> </div>
                        </div>
                        <div>
                            <div class="well">
                                <h4>Money Back Guarantee</h4>
                                <p>Our analysis shows we may be able to increase your benefits rating by additional 10%.  If we can't deliver on our promise then you get your money back.  It's that simple.</p>
                            </div>
                        </div>
                    </div>
                    <div id="results4div" class="">
                        <span class="text-success">You currently have maximum VA benefits.  Looks like we can't help you.  Please refer your friends to us.</span>
                    </div>


                    <div class="form-group m-t-40">
                        <label class="control-label">Create a free account to get started</label>
                        <div class="col-xs-12">
                            <input asp-for="Register.Username" class="form-control" type="text" placeholder="Email">
                            <span asp-validation-for="Register.Username" class="text-danger"></span>
                        </div>
                        <div class="col-xs-12">
                            <input asp-for="Register.Password" class="form-control" type="password" required="" placeholder="Password">
                            <span asp-validation-for="Register.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="button" id="btnRegisterEvaluation">Get Started</button>
                        </div>

                    </div>
                    <div class="col-sm-12 text-center">
                        <p>Already have an account? <a href="#" onclick="showform('loginformdiv');" class="text-primary m-l-5"><b>Sign In</b></a></p>
                    </div>

                    <div class="col-sm-12 text-center">
                        <a href="#" onclick="showform('captureformdiv');" class="text-primary m-l-5"><b>Not Interested</b></a>
                    </div>
                </form>

            </div>


            <div id="loginformdiv" style="display: none">
                <form id="loginform" class="form-horizontal form-material">
                    <h1>Valued Veteran Consulting Services</h1>
                    <p>Helping veterans increase disability benefits</p>

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input asp-for="Login.Username" class="form-control" type="text" required="" placeholder="Username">
                            <span asp-validation-for="Login.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input asp-for="Login.Password" class="form-control" type="password" required="" placeholder="Password">
                            <span asp-validation-for="Login.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="#" onclick="showform('recoverformdiv');" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="button" id="btnLogin">Log In</button>
                        </div>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Don't have an account? <a href="#" onclick="showform('registerformdiv');" class="text-primary m-l-5"><b>Sign Up</b></a></p>
                        </div>
                    </div>

                </form>
            </div>


            <div id="registerformdiv" style="display: none">
                <form id="registerform" class="form-horizontal form-material">
                    <h1>Valued Veteran Consulting Services</h1>
                    <p>Helping veterans increase disability benefits</p>
                    <h3 class="box-title m-t-40 m-b-0">Register Now</h3><small>Create your account and enjoy</small>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Register.Username" class="form-control" type="text" required="" placeholder="Email">
                            <span asp-validation-for="Register.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Register.Password" class="form-control" type="password" required="" placeholder="Password">
                            <span asp-validation-for="Register.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="button" id="btnRegister">Sign Up</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Already have an account? <a href="#" onclick="showform('loginformdiv');" class="text-primary m-l-5"><b>Sign In</b></a></p>
                        </div>
                    </div>
                </form>
            </div>





            <div id="recoverformdiv" style="display: none">
                <form id="recoverformx" class="form-horizontal form-material">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Recover.Email" class="form-control" type="text" required="" placeholder="Email">
                            <span asp-validation-for="Recover.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Already have an account? <a href="#" onclick="showform('loginformdiv');" class="text-primary m-l-5"><b>Sign In</b></a></p>
                            <p>Don't have an account? <a href="#" onclick="showform('registerformdiv');" class="text-primary m-l-5"><b>Sign Up</b></a></p>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>


</section>

