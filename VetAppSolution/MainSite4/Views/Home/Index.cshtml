@model CombinedLoginRegisterViewModel

@{
    Layout = "~/Views/_LayoutHome.cshtml";
    ViewData["Title"] = "Valued Veteran";
    ViewData["Description"] = "Valued Veteran";
}

<!-- Modal -->
